{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "api.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; pip3 install --user -e '.[dev]'; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "uvicorn api:app --reload --port 8000"
  },
  "portsAttributes": {
    "8000": {
      "label": "API Server",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8000
  ]
}
