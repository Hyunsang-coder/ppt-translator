# =============================================================================
# PPT Translator Backend Configuration
# Copy this file to .env and fill in your values.
# =============================================================================

# --- API Keys (at least one required) ---
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# --- CORS ---
# Comma-separated list of allowed frontend origins
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,http://localhost:3000

# --- Translation Tuning (optional, defaults shown) ---
# TRANSLATION_MAX_CONCURRENCY=8
# TRANSLATION_BATCH_SIZE=80
# TRANSLATION_MIN_BATCH_SIZE=60
# TRANSLATION_MAX_BATCH_SIZE=100
# TRANSLATION_TARGET_BATCH_COUNT=5
# TRANSLATION_WAVE_MULTIPLIER=1.2
# TRANSLATION_TPM_LIMIT=30000

# --- Rate Limiting (optional, defaults shown) ---
# TRANSLATION_RATE_LIMIT_RPS=1.0
# TRANSLATION_RATE_LIMIT_CHECK_INTERVAL=0.1
# TRANSLATION_RATE_LIMIT_MAX_BUCKET=10
